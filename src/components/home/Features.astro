---
// content
import { getCollection } from 'astro:content';
// components
import Heading from '@/components/ui/Heading.astro';

const features = await getCollection('features');
---

<section aria-label='Feature section' class='features'>
  <div>
    <Heading tagName='h2' tagSize='h2'
      >私は、高速で洗練された現代的なウェブサイトを制作しております！</Heading
    >
    <ul role='list'>
      {
        features.map(({ data }) => (
          <li>
            <Fragment set:html={data.icon} />
            <Heading tagName='h3' tagSize='h4'>
              {data.title}
            </Heading>
            <p>{data.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
