---
// components
import Heading from '@/components/ui/Heading.astro';

// asset
import avatar from '@/assets/avatar.jpeg';

type Props = {
  currentPage: number;
};

const { currentPage } = Astro.props;
---

<section aria-label='Hero Section' class='blog-hero container'>
  <img src={avatar.src} alt='MasanaoFukuishi' />
  <div>
    <Heading tagName='h1' tagSize='h2'>
      My Blog
      <span>Page {currentPage.toString()}</span>
    </Heading>
    <p>
      フリーランスとして活動しています。<br
      />主にフロントエンドの開発を行っています。
    </p>
  </div>
</section>
